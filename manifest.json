{
  "manifest_version": 3,
  "name": "Flow Timer - Pomodoro",
  "version": "1.0",
  "description": "Master your focus with Flow Timer, a powerful Pomodoro Timer. Take control of your time and find your flow.",

  "permissions": [
    "storage",
    "declarativeNetRequest",
    "alarms",
    "notifications",
    "offscreen"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_page": "options.html",

  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}